{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
 "env": {
  "MONGODB_URI": "mongodb+srv://your-actual-connection-string",
  "JWT_SECRET": "your-actual-secret-key"
}
}